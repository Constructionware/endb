{
  "name": "endb",
  "version": "0.22.9",
  "description": "Simple key-value storage with support for multiple backends.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "jest",
    "coverage": "jest --coverage",
    "lint": "eslint . --ext .ts --ignore-path .gitignore",
    "lint:fix": "npm run lint -- --fix",
    "build": "rimraf dist && tsc",
    "build:docs": "typedoc",
    "test:docker": "docker-compose up --build --abort-on-container-exit --exit-code-from test",
    "posttest:docker": "docker-compose down --rmi local",
    "prepublishOnly": "npm run lint:fix && npm run build && ava test/index.js"
  },
  "keywords": [
    "endb",
    "key-value",
    "cache",
    "javascript",
    "nodejs",
    "mongodb",
    "mysql",
    "postgresql",
    "redis",
    "sqlite"
  ],
  "license": "MIT",
  "author": "chroventer (https://github.com/chroventer)",
  "homepage": "https://endb.js.org",
  "repository": "chroventer/endb",
  "bugs": "https://github.com/chroventer/endb/issues",
  "dependencies": {
    "buffer-json": "^2.0.0",
    "lodash": "^4.17.15"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-angular": "^8.3.4",
    "@types/buffer-json": "^2.0.0",
    "@types/jest": "^25.2.1",
    "@types/lodash": "^4.14.150",
    "@types/mongodb": "^3.5.14",
    "@types/node": "^13.13.4",
    "@types/pg": "^7.14.3",
    "@types/redis": "^2.8.18",
    "@types/sqlite3": "^3.1.6",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "eslint": "^6.8.0",
    "jest": "^25.4.0",
    "lint-staged": "^10.1.6",
    "mongodb": "^3.5.6",
    "mysql2": "^2.1.0",
    "pg": "^8.0.2",
    "redis": "^3.0.2",
    "rimraf": "^3.0.2",
    "sql-ts": "^3.0.1",
    "sqlite3": "^4.1.1",
    "ts-jest": "^25.4.0",
    "typedoc": "^0.17.6",
    "typescript": "^3.8.3"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-angular"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": "npm run lint:fix"
  },
  "jest": {
    "clearMocks": true,
    "coverageDirectory": "coverage",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testRegex": "/test/.*\\.(test|spec)?\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts"
    ]
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-non-null-assertion": "off",
      "@typescript-eslint/no-namespace": "off"
    }
  }
}
