{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "jest --ci --forceExit",
    "test:docker": "docker-compose up --build --abort-on-container-exit --exit-code-from test",
    "publish": "lerna publish"
  },
  "devDependencies": {
    "jest": "26.0.1",
    "lerna": "3.22.1"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/packages"
    ],
    "verbose": true
  }
}
