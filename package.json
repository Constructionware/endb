{
    "name": "endb",
    "version": "0.20.1",
    "description": "Simple key-value storage with support for multiple backends",
    "main": "src/index.js",
    "typings": "typings/index.d.ts",
    "scripts": {
        "test": "npm run lint:fix && ava --serial",
        "test:watch": "ava --watch",
        "lint": "xo src",
        "lint:fix": "xo src --fix",
        "docs:build": "node docs.js",
        "docs:serve": "docma serve docs",
        "prepublishOnly": "npm run test"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/chroventer/endb.git"
    },
    "keywords": [
        "endb",
        "key-value",
        "cache",
        "javascript"
    ],
    "author": "chroventer <chroventer@gmail.com> (https://github.com/chroventer)",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/chroventer/endb/issues"
    },
    "homepage": "https://endb.js.org",
    "devDependencies": {
        "ava": "^3.0.0",
        "docma": "^3.2.2",
        "jsdoc-dynamic": "^1.0.4",
        "xo": "^0.25.3"
    },
    "xo": {
        "prettier": true,
        "semicolon": true,
        "rules": {
            "guard-for-in": 0
        },
        "overrides": [
            {
                "files": "src/util.js",
                "rules": {
                    "no-new-object": 0,
                    "no-return-assign": 0,
                    "no-unused-vars": 0
                }
            },
            {
                "files": "src/index.js",
                "rules": {
                    "no-negated-condition": 0
                }
            }
        ]
    }
}
