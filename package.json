{
  "name": "endb",
  "version": "0.23.0",
  "description": "Simple key-value storage with support for multiple backends.",
  "main": "dist/index.js",
  "files": [
    "src"
  ],
  "scripts": {
    "lint": "eslint --ignore-path .gitignore --ext .ts ./",
    "test": "jest --ci --noStackTrace --forceExit",
    "test:docker": "docker-compose up --build --abort-on-container-exit --exit-code-from test",
    "build": "rimraf dist && tsc",
    "build:docs": "node docs.js"
  },
  "keywords": [
    "endb",
    "key-value",
    "cache",
    "javascript"
  ],
  "license": "MIT",
  "author": "chroventer (https://github.com/chroventer)",
  "homepage": "https://endb.js.org",
  "repository": "enhancex/endb",
  "bugs": "https://github.com/enhancex/endb/issues",
  "dependencies": {
    "buffer-json": "^2.0.0",
    "lodash": "^4.17.15"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-angular": "8.3.4",
    "@types/buffer-json": "^2.0.0",
    "@types/lodash": "^4.14.155",
    "@types/node": "^14.0.13",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "docma": "^3.2.2",
    "eslint": "^7.2.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "mongodb": "^3.5.6",
    "mysql2": "^2.1.0",
    "pg": "^8.1.0",
    "redis": "^3.0.2",
    "rimraf": "^3.0.2",
    "sql": "^0.78.0",
    "sqlite3": "^4.1.1",
    "typescript": "^3.9.5"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parserOptions": {
      "project": "tsconfig.json"
    },
    "rules": {
      "@typescript-eslint/no-var-requires": "off",
      "@typescript-eslint/no-non-null-assertion": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": "npm run lint -- --fix"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-angular"
    ]
  }
}
